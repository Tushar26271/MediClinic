<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MediClinic</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Font Awesome (Medical Icons) -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
            background-attachment: fixed;
            margin: 0;
            padding: 0;
            overflow-x: hidden;
        }

        .glass-navbar {
            backdrop-filter: blur(12px);
            background: rgba(255, 255, 255, 0.95);
            box-shadow: 0 8px 24px rgba(0,0,0,0.08);
        }

        .nav-link {
            color: #334155 !important;
            font-weight: 600;
        }

            .nav-link::after {
                background: linear-gradient(90deg, #0072ff, #00c6ff);
            }


        @@keyframes pulse {
            0% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.15);
            }

            100% {
                transform: scale(1);
            }
        }

        /* Nav links */
        .nav-link {
            color: #fff !important;
            font-weight: 500;
            position: relative;
            transition: all 0.3s ease;
        }

        .glass-navbar {
            backdrop-filter: blur(12px);
            background: rgba(255, 255, 255, 0.95);
            box-shadow: 0 8px 24px rgba(0,0,0,0.08);
        }

        .nav-link {
            color: #334155 !important;
            font-weight: 600;
        }

            .nav-link::after {
                background: linear-gradient(90deg, #0072ff, #00c6ff);
            }


        /* 3D Button Effect */
        .btn-premium {
            border-radius: 30px;
            padding: 8px 20px;
            font-weight: 500;
            background: linear-gradient(135deg, #00eaff, #0072ff);
            color: white !important;
            border: none;
            transition: all 0.4s ease;
            box-shadow: 0 8px 20px rgba(0, 114, 255, 0.4);
        }

            .btn-premium:hover {
                transform: translateY(-4px) scale(1.05);
                box-shadow: 0 15px 30px rgba(0, 114, 255, 0.6);
            }

        /* Footer */
        footer {
            backdrop-filter: blur(10px);
            background: rgba(255,255,255,0.08);
            color: #fff;
            text-align: center;
            padding: 15px 0;
            margin-top: 40px;
        }

            footer a {
                color: #00eaff;
                text-decoration: none;
            }

        /* Mobile Responsive */
        @@media (max-width: 768px) {
            .navbar-nav {
                text-align: center;
                margin-top: 15px;
            }

            .btn-premium {
                margin-top: 10px;
            }
        }
    </style>
</head>

<body>

    <!-- ===== HEADER ===== -->
    <header>
        <nav class="navbar navbar-expand-lg glass-navbar">
            <div class="container-fluid">

                <!-- Animated Logo -->
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="fa-solid fa-heart-pulse"></i> MediClinic
                </a>

                <button class="navbar-toggler bg-light" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end" id="navbarContent">
                    <ul class="navbar-nav align-items-center gap-3">

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="fa-solid fa-house-medical"></i> Home
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Privacy">
                                <i class="fa-solid fa-shield-halved"></i> Privacy
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="btn btn-premium" asp-controller="Credimgr" asp-action="Login">
                                <i class="fa-solid fa-right-to-bracket"></i> Login
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="btn btn-premium" asp-controller="Credimgr" asp-action="Create">
                                <i class="fa-solid fa-user-plus"></i> Register
                            </a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- ===== MAIN CONTENT ===== -->
    <div class="container mt-4">
        <main role="main" class="pb-3 text-white">
            @RenderBody()
        </main>
    </div>

    <!-- ===== FOOTER ===== -->
    <footer>
        &copy; 2026 MediClinic |
        <a asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
