@model MediClinic.Models.Physician

@{
    ViewData["Title"] = "Create Physician";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="admin-form-wrapper">
    <div class="admin-form-card">
        <h4 class="form-title text-center">🩺 Create Physician</h4>

        <form asp-action="CreatePhysician">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="PhysicianName"></label>
                <input asp-for="PhysicianName" class="form-control" />
                <span asp-validation-for="PhysicianName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Specialization"></label>
                <input asp-for="Specialization" class="form-control specialization-input" />
                <span asp-validation-for="Specialization" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Address"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Phone"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Summary"></label>
                <input asp-for="Summary" class="form-control" />
                <span asp-validation-for="Summary" class="text-danger"></span>
            </div>
            <div class="form-group form-actions-fix">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="PatientGetDetails" class="btn btn-outline-secondary">
                    Back to List
                </a>
            </div>
            
        </form>
    </div>
</div>
